<view class="container">
  <!-- 触发选图/拍照的按钮 -->
  <button bindtap="chooseAndUploadPhoto" type="primary">
    选择/拍摄照片并上传
  </button>

  <!-- 照片预览区域（选图后显示） -->
  <view class="preview-container" wx:if="{{previewUrl}}">
    <text>已选择照片：</text>
    <image src="{{previewUrl}}" mode="widthFix" class="preview-img"></image>
  </view>

  <!-- 上传状态提示 -->
  <view class="tip" wx:if="{{tip}}">{{tip}}</view>
</view>