.editor1-root {
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}
.jt-star-home {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}
.meteor {
  position: absolute;
  width: 10px;
  height: 16px;
  background: linear-gradient(transparent, #a08f8f);
  animation: meteor 5s linear infinite;
  transform: rotate(45deg);
}
@keyframes meteor {
  from {
    /* 仅改运动轨迹：从右上角出发（水平右+垂直上），保留箭头角度 */
    transform: translateX(100vw) translateY(-100vh) rotate(45deg);
    opacity: 1;
  }
  to {
    /* 仅改运动轨迹：到左下角结束（水平左+垂直下），保留箭头角度 */
    transform: translateX(-100vw) translateY(100vh) rotate(45deg);
    opacity: 0;
  }
}
.editor1-content {
  position: relative;
  z-index: 10;
  width: 100%;
}



.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover; /* 图片自适应覆盖全屏 */
  background-position: center; /* 图片居中显示 */
  z-index: 0; /* 层级低于流星雨和内容 */
  opacity: 0.5; /* 透明度可调整（0-1） */
}