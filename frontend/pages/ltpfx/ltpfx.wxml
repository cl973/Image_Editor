<!--pages/ltpfx/ltpfx.wxml-->
<view class='bg'>
  <!-- 修复：用 flex 布局替代 inline-flex，确保容器宽度100% -->
  <view class="param-group">
    <text class="param-label">泛黄：</text>  
    <!-- 父容器改为 block，避免 inline 导致的宽度异常 -->
    <view class="param-control">
      <input 
        type="number" 
        value="{{sliderValue1}}" 
        bindinput="onInputChange1"
        min="0" max="100"  
        class="param-input"
      />
      <slider 
        min="0" max="100" step="1" 
        value="{{sliderValue1}}" 
        activeColor="#4CAF50" backgroundColor="#eee"
        bindchange="onSliderChange1" 
        class="param-slider"
      />
    </view>
    <view class="param-value">当前值：{{sliderValue1}}</view>
  </view>

  <view class="param-group">
    <text class="param-label">褪色：</text>
    <view class="param-control">
      <input 
        type="number" 
        value="{{sliderValue2}}" 
        bindinput="onInputChange2"
        min="0" max="100"
        class="param-input"
      />
      <slider 
        min="0" max="100" step="1" 
        value="{{sliderValue2}}" 
        activeColor="#4CAF50" backgroundColor="#eee"
        bindchange="onSliderChange2" 
        class="param-slider"
      />
    </view>
    <view class="param-value">当前值：{{sliderValue2}}</view>
  </view>

  <view class="param-group">
    <text class="param-label">划痕：</text>
    <view class="param-control">
      <input 
        type="number" 
        value="{{sliderValue3}}" 
        bindinput="onInputChange3"
        min="0" max="100"
        class="param-input"
      />
      <slider 
        min="0" max="100" step="1" 
        value="{{sliderValue3}}" 
        activeColor="#4CAF50" backgroundColor="#eee"
        bindchange="onSliderChange3" 
        class="param-slider"
      />
    </view>
    <view class="param-value">当前值：{{sliderValue3}}</view>
  </view>

  <view class="param-group">
    <text class="param-label">噪声：</text>
    <view class="param-control">
      <input 
        type="number" 
        value="{{sliderValue4}}" 
        bindinput="onInputChange4"
        min="0" max="100"
        class="param-input"
      />
      <slider 
        min="0" max="100" step="1" 
        value="{{sliderValue4}}" 
        activeColor="#4CAF50" backgroundColor="#eee"
        bindchange="onSliderChange4" 
        class="param-slider"
      />
    </view>
    <view class="param-value">当前值：{{sliderValue4}}</view>
  </view>

  <view class="btn-group">
    <button class="btn upload-btn" type="primary" bindtap="uploadparams">上传参数</button>
    <button class="btn back-btn" type="primary" bindtap="backeditor">返回编辑页面</button>
  </view>
</view>